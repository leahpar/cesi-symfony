{% extends 'base.html.twig' %}

{% block body %}

<div>
    <h2>[{{ post.id }}] {{ post.title }}</h2>
    <p>{{ post.date|date('d/m/Y H:i') }}</p>
    <p>{{ post.content }}</p>
</div>

<a href="{{ path('blog_post_edit', {id: post.id}) }}">
    modifier le post
</a>
<br>
<a href="{{ path('blog_post_delete', {id: post.id}) }}">
    supprimer le post
</a>


{% endblock body %}
