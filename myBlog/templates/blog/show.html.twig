{% extends 'blog/base.html.twig' %}

{% block content %}
<div class="border">
    <h1>{{ post.title }}</h1>
    <p>{{ post.date|date('Y-m-d') }}</p>
    <p>{{ post.content }}</p>

    <a href="{{ path('post_list') }}">Retour</a>
    <br>

    <a href="{{ path('post_edit', {id: post.id}) }}">Modifier</a>
    <br>

    <form
        method="post"
        action="{{ path('post_delete', {id: post.id}) }}">
        <input type="submit" value="supprimer">
    </form>
</div>
{% endblock %}

